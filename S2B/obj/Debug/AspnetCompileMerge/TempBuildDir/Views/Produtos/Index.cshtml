@model IEnumerable<S2B.Models.PRODUTO>

@{
    ViewBag.title = "Produtos";
}


        <div class="container fix">
            <h3>Cadastro de Produtos</h3>
            <button class="btn btn-default">
                @Html.ActionLink("Cadastrar Produtos", "Create")
            </button>
            <hr />
            <table class="table">
                <tr>
                  
                    <th>
                        Nome
                    </th>
                    <th>
                        Preço
                    </th>
                    <th>
                       Quantidade
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.NOME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PRECO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QUANTIDADE)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.COD_PRODUTO }) |
                            @Html.ActionLink("Ver", "Details", new { id = item.COD_PRODUTO }) |
                            @Html.ActionLink("Exluir", "Delete", new { id = item.COD_PRODUTO })
                        </td>
                    </tr>
                }

            </table>
        </div>
