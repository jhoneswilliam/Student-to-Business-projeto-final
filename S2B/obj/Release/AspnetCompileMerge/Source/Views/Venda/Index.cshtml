@model S2B.Models.VENDA
@Scripts.Render("~/bundles/angular")

<div class="jumbotron" id="home">
    <div class="intro">
        <div class="container">
            <div class="col-md-12" ng-app="appVenda">
                <div ng-controller="addProduto">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <p>Produto</p>
                                <input name="codigo" type="number" class="form-control" ng-model="produto.cod" />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <p>Produto</p>
                                <input name="produto" type="text" class="form-control" ng-model="produto.nome" />
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <p>Preço</p>
                                <input name="preco" type="number" readonly="readonly" class="form-control text-right" value="{{ produto.cod }}" />
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <p>Quantidade</p>
                                <input name="quantidade" type="number" class="form-control text-center" ng-model="produto.quantidade" />
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <p>Total</p>
                                <input name="total" type="number" class="form-control text-right" readonly="readonly" value="{{ produto.cod * produto.quantidade }}" />
                            </div>
                        </div>

                        <div class="col-md-1">
                            <div class="form-group">
                                <p>Add</p>
                                <button class="btn btn-info">Adicionar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 venda-view">

                </div>
                <!--provalvemente sera por ajax e não necessita de ficar manipulando-->
                <form name="compra" class="for-venda">
                    <div class="hidden venda-input">
                    </div>
                </form>
            </div>
        </div>
    </div>

