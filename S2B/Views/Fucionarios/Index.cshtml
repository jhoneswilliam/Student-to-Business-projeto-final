@model IEnumerable<S2B.Models.FUNCIONARIO>

@{
//Layout = null;
}


    <div class="container fix">
        
            <h3>Quadro de Funcionários</h3>
                <button class="btn btn-default">
                    @Html.ActionLink("Cadastrar Funcionário", "Create")
                </button>
                   <p></p> 
                
                <table class="table table-responsive">
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            C.P.F
                        </th>
                        <th>
                            Login
                        </th>
                        <th>
                            Senha
                        </th>
                        <th>
                            E-mail
                        </th>
                        <th>
                            Endereço
                        </th>
                        <th>
                           Telefone
                        </th>
                        <th>
                           Celular
                        </th>
                        <th>
                           Tipo
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CPF)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LOGIN)
                            </td>
                            <td>
                               *****
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EMAIL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ENDERECO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TELEFONE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CELULAR)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TIPO)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.COD_FUNCIONARIO }) |
                                @Html.ActionLink("Ver", "Details", new { id = item.COD_FUNCIONARIO }) |
                                @Html.ActionLink("Exluir", "Delete", new { id = item.COD_FUNCIONARIO })
                            </td>
                        </tr>
                    }

                </table>
            
       
    </div>
